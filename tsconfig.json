{
  // https://www.typescriptlang.org/tsconfig
  "compilerOptions": {
    /*
      Type Checking
    */
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    /*
      Modules
    */
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@/resource/*": [
        "resource/*"
      ],
      "@/global/*": [
        "global/*"
      ],
      "@/util/*": [
        "util/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/type/*": [
        "type/*"
      ]
    },
    "resolveJsonModule": true,
    //
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /*
      Emit
    */
    "declaration": true,
    "outDir": "build",
    // default
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /*
      Compiler Diagnostics
    */
    "diagnostics": true,
    "extendedDiagnostics": true,
    /*
      Projects
    */
    "incremental": true,
    // TypeScript project references are not fully supported in Next
    "composite": false,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

